<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_large_size"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/activity_main_screen_drawer_header_img"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/activity_main_screen_drawer_header_user_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/margin_large_size"
        android:src="@drawable/blackjack_icon2" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/activity_main_screen_drawer_header_user_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_screen_drawer_header_img"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin_large_size"
        android:layout_marginTop="@dimen/margin_xlarge"
        android:src="@drawable/ic_account_circle"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/activity_main_screen_drawer_header_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/activity_main_screen_drawer_header_user_img"
        app:layout_constraintBottom_toBottomOf="@+id/activity_main_screen_drawer_header_user_img"
        app:layout_constraintStart_toEndOf="@+id/activity_main_screen_drawer_header_user_img"
        android:layout_margin="@dimen/margin_little_size"
        android:textSize="@dimen/text_normal_size"
        android:textStyle="bold"
        android:text="Charles freddy"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/activity_main_screen_drawer_header_user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_screen_drawer_header_username"
        app:layout_constraintStart_toEndOf="@+id/activity_main_screen_drawer_header_user_img"
        app:layout_constraintBottom_toBottomOf="@+id/activity_main_screen_drawer_header_user_img" />

</androidx.constraintlayout.widget.ConstraintLayout>