<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Blackjack" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- BUTTON -->
    <style name="Button">
        <item name="android:padding">@dimen/padding_large_size</item>
        <item name="android:layout_margin">@dimen/margin_normal_size</item>
        <item name="android:textSize">@dimen/text_medium_size</item>
    </style>

    <style name="MorphButton">
<!--        <item name="android:layout_marginStart">@dimen/margin_normal_size</item>-->
<!--        <item name="android:layout_marginEnd">@dimen/margin_normal_size</item>-->
        <item name="android:layout_margin">@dimen/margin_normal_size</item>
    </style>

    <style name="Image_button" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_marginStart">@dimen/margin_large_size</item>
        <item name="android:layout_marginEnd">@dimen/margin_large_size</item>
        <item name="android:layout_marginTop">@dimen/margin_large_size</item>
        <item name="android:layout_marginBottom">@dimen/margin_large_size</item>
    </style>

    <style name="main_screen_button" parent="Widget.AppCompat.Button">
        <item name="android:layout_margin">@dimen/margin_large_size</item>
        <item name="android:background">@drawable/rounded_corner_colored</item>
        <item name="android:tint">@color/purple_200</item>
    </style>

    <!-- IMAGE VIEW -->
    <style name="CurrentPlayerIcon">
        <item name="android:layout_marginTop">@dimen/margin_normal_size</item>
        <item name="android:layout_marginStart">@dimen/margin_normal_size</item>
        <item name="android:layout_marginEnd">@dimen/margin_normal_size</item>
        <item name="android:visibility">gone</item>
        <item name="android:src">@drawable/baseline_play_arrow_24</item>
    </style>

    <style name="PlayerResultIcon">
        <item name="android:layout_marginTop">@dimen/margin_little_size</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- TEXT VIEW -->
    <style name="text_view" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_normal_size</item>
    </style>

    <style name="ScoreTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginStart">@dimen/margin_normal_size</item>
        <item name="android:layout_marginEnd">@dimen/margin_little_size</item>
        <item name="android:layout_marginTop">@dimen/margin_normal_size</item>
        <item name="android:textSize">@dimen/text_medium_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleTextView">
        <item name="android:layout_marginTop">@dimen/margin_little_size</item>
        <item name="android:textSize">@dimen/text_medium_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ValueTextView">
        <item name="android:layout_marginStart">@dimen/margin_little_size</item>
        <item name="android:layout_marginEnd">@dimen/margin_little_size</item>
        <item name="android:layout_marginTop">@dimen/margin_little_size</item>
        <item name="android:layout_marginBottom">@dimen/margin_little_size</item>
        <item name="android:paddingStart">@dimen/margin_little_size</item>
        <item name="android:paddingEnd">@dimen/margin_little_size</item>
        <item name="android:textSize">@dimen/text_medium_size</item>
<!--        <item name="android:background">@drawable/rounded_border</item>-->
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BetTextView">

    </style>

    <!-- RECYCLER VIEW -->
    <style name="RecyclerView" >
        <item name="android:layout_marginEnd">@dimen/margin_normal_size</item>
        <item name="android:layout_marginStart">@dimen/margin_large_size</item>
<!--        <item name="android:layout_marginTop">@dimen/margin_large_size</item>-->
<!--        <item name="android:layout_marginBottom">@dimen/margin_large_size</item>-->
    </style>

    <!-- ANIMATION -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>


    <string name="x2_text" translatable="false">x2</string>
</resources>