<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_normal_size"
    android:layout_marginVertical="@dimen/margin_little_size">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple_200"
        android:background="@drawable/rounded_border_light">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/online_main_screen_row_user_picture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_account_circle"
            android:transitionName="@string/animation_online_main_screen_to_detail"
            android:layout_margin="@dimen/margin_normal_size"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/online_main_screen_row_user_pseudo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/online_main_screen_row_user_picture"
            app:layout_constraintStart_toEndOf="@+id/online_main_screen_row_user_picture"
            app:layout_constraintBottom_toBottomOf="@+id/online_main_screen_row_user_picture"
            android:layout_marginBottom="@dimen/margin_large_size"
            android:textSize="@dimen/text_normal_size"
            android:text="lleotraas"
            android:textColor="@color/black"
            android:transitionName="@string/animation_online_main_screen_to_detail"
            android:layout_marginHorizontal="@dimen/margin_normal_size"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/online_main_screen_row_user_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/online_main_screen_row_user_pseudo"
            app:layout_constraintStart_toStartOf="@+id/online_main_screen_row_user_pseudo"
            android:textSize="@dimen/text_normal_size"
            android:text="1534.45"
            android:textColor="@color/black"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/online_main_screen_row_online_status_img"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/online_main_screen_row_user_pseudo"
            app:layout_constraintBottom_toBottomOf="@+id/online_main_screen_row_user_pseudo"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_online_circle"
            android:layout_marginHorizontal="@dimen/margin_normal_size"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/online_main_screen_row_is_playing_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/online_main_screen_row_user_wallet"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="is playing"
            android:textSize="@dimen/text_normal_size"
            android:textColor="@color/black"
            android:layout_marginHorizontal="@dimen/margin_normal_size"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>